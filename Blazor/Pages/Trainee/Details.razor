@page "/Trainee/Details/{id:int}"


<h3>Trainee Details</h3>
<hr />

@if (trainee == null)
{
    <div> Still Loading ............. </div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">ID: </dt>
        <dd class="col-sm-10">@trainee.Id</dd>

        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@trainee.Name</dd>

        <dt class="col-sm-2">Gender: </dt>
        <dd class="col-sm-10">@trainee.Gender</dd>

        <dt class="col-sm-2">Email: </dt>
        <dd class="col-sm-10">@trainee.Email</dd>

        <dt class="col-sm-2">Mobile: </dt>
        <dd class="col-sm-10">@trainee.Mobile</dd>

        <dt class="col-sm-2">IsGraduated: </dt>
        <dd class="col-sm-10">@trainee.IsGraduated</dd>

        <dt class="col-sm-2">Track: </dt>
        <dd class="col-sm-10">@trainee.Track</dd>

    </dl>

    <a href="/Trainee/GetAll" class="btn btn-secondary px-4 py-2 mt-3">
        <i class="fas fa-arrow-left me-2"></i>Back
    </a>
}


@code {
    private TraineeDTO? trainee;

    [Parameter] public int Id { get; set; }

    [Inject] private TraineeApi? TraineeApi { get; set; }


    protected override async Task OnInitializedAsync()
    {
        trainee = await TraineeApi.GetTraineeAsync(Id);
    }
}
